<?xml version="1.0" encoding="UTF-8" ?>
<!-- Specify the refresh internal in seconds. -->
<Configuration monitorInterval="60">
    <Appenders>
        <RollingFile name="caslogfile" fileName="runtime/logs/cas/cas.log" append="true"
                     filePattern="runtime/logs/cas/cas-%d{yyyy-MM-dd-HH}-%i.log">
            <PatternLayout pattern="%d %p [%c] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="auditlogfile" fileName="runtime/logs/cas/cas_audit.log" append="true"
                     filePattern="runtime/logs/cas/cas_audit-%d{yyyy-MM-dd-HH}-%i.log">
            <PatternLayout pattern="%d %p [%c] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="perfFileAppender" fileName="runtime/logs/cas/perfStats.log" append="true"
                     filePattern="runtime/logs/cas/perfStats-%d{yyyy-MM-dd-HH}-%i.log">
            <PatternLayout pattern="%m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <AsyncLogger name="org.jasig" level="info" additivity="false" includeLocation="true">
            <AppenderRef ref="caslogfile"/>
        </AsyncLogger>
        <AsyncLogger name="org.langhua.ofbiz.cas" level="info" additivity="false" includeLocation="true">
            <AppenderRef ref="caslogfile"/>
        </AsyncLogger>

        <AsyncLogger name="org.springframework.aop" level="info" />
        <AsyncLogger name="org.springframework.beans" level="info" />
        <AsyncLogger name="org.springframework.context" level="info" />
        <AsyncLogger name="org.springframework.core" level="info" />
        <AsyncLogger name="org.springframework.jndi" level="info" />
        <AsyncLogger name="org.springframework.transaction" level="info" />
        <AsyncLogger name="org.springframework.ui" level="info" />
        <AsyncLogger name="org.springframework.util" level="info" />
        <AsyncLogger name="org.springframework.webflow" level="info" />
        <AsyncLogger name="org.springframework.web" level="info" />
        <AsyncLogger name="org.pac4j" level="info" />
        <AsyncLogger name="com.ryantenney.metrics" level="info" />
        <AsyncLogger name="org.hibernate.validator" level="info" />
        <AsyncLogger name="org.jose4j" level="info" />
        <AsyncLogger name="org.quartz" level="info" />

        <AsyncLogger  name="org.apereo.cas.security" level="warn" additivity="false" includeLocation="true">
            <AppenderRef ref="caslogfile"/>
        </AsyncLogger>
        
        <AsyncLogger name="perfStatsLogger" level="info" additivity="false" includeLocation="true">
            <AppenderRef ref="perfFileAppender"/>
        </AsyncLogger>

        <AsyncLogger name="org.jasig.cas.web.flow" level="info" additivity="true" includeLocation="true">
            <AppenderRef ref="caslogfile"/>
        </AsyncLogger>
        <AsyncLogger name="org.jasig.inspektr.audit.support" level="info" includeLocation="true">
            <AppenderRef ref="caslogfile"/>
        </AsyncLogger>
    </Loggers>
</Configuration>
